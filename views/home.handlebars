<div class="modal-seeUserLike" id="modal-seeUserLike">
    <div class="modal-spaceUserLike" id="modal-spaceUserLike">
        <div class="titleUserLike">
            <h6>Những người đã thich bài viết này</h6>
        </div>
        <div class="listUserLike" id="listUserLike"></div>
        <button id="btnCloseUserLike" class="btnCloseUserLike">Đóng</button>
    </div>
</div>

<script>
    var spaceEnd = document.getElementById('spaceEnd');
    var spaceApp = document.querySelector('.row.spaceApp');
    var listitempage = document.getElementById('list-item-page');


    var numPage = spaceApp.id;
    if (numPage <= 1) {
        spaceEnd.style.display = 'none';
    }

    else {
        for (i = 1; i <= (numPage + 1); i++) {
            listitempage.insertAdjacentHTML('beforeend', `<a href="/home/${i}" class="itemPage" id="${i}">${i}</a>`)
        }
    }

    var f = window.location.href;
    var i = f.slice(f.length - 1);
    var numC = document.getElementById('1');
    if (numC) {
        if (i == 'e' || i == '/') {
        numC.style.backgroundColor = 'rgba(255, 255, 255, 0.8)';
        }
        else {
            document.getElementById(`${i}`).style.backgroundColor = 'rgba(255, 255, 255, 0.8)';
        }
    }



</script>
